/* -----------------------------------------------------------------------------
  version.rc.in   —  Windows VERSIONINFO + optional icon
  Shared by both macOS + Windows builds via `${PROJECT_ROOT}/cmake/`.
 -----------------------------------------------------------------------------
  Placeholders injected by CMake configure_file():
     @PROJECT_VERSION@, @PROJECT_VERSION_MAJOR@, etc.  (from project())
     @BUILD_NUMBER@                              (derived from git rev‑list)
     @COMPANY_NAME@, @LEGAL_COPYRIGHT@, @TRADEMARKS@, @GIT_HASH@
 -----------------------------------------------------------------------------*/
#include <windows.h>

/* Auto-generated by CMake. Values injected:
     @PROJECT_VERSION@  → semantic version (e.g. 0.3.0)
     @BUILD_NUMBER@     → Git commit count (e.g. 34) */

VS_VERSION_INFO VERSIONINFO
 FILEVERSION     @PROJECT_VERSION_MAJOR@,@PROJECT_VERSION_MINOR@,@PROJECT_VERSION_PATCH@,@BUILD_NUMBER@
 PRODUCTVERSION  @PROJECT_VERSION_MAJOR@,@PROJECT_VERSION_MINOR@,@PROJECT_VERSION_PATCH@,@BUILD_NUMBER@
 BEGIN
     BLOCK "StringFileInfo"
     BEGIN
         BLOCK "040904B0"    // US English, Unicode
         BEGIN
             VALUE "CompanyName",      "@COMPANY_NAME@"
             VALUE "ProductName",      "CBApp"
             VALUE "FileDescription",  "Multi-purpose application. Electrodynamic simulator using the FDTD method"
             VALUE "FileVersion",      "@PROJECT_VERSION@.@BUILD_NUMBER@"
             VALUE "ProductVersion",   "@PROJECT_VERSION@.@BUILD_NUMBER@"
             VALUE "InternalName",     "CBApp_Win64.exe"
             VALUE "OriginalFilename", "CBApp_Win64.exe"
             VALUE "LegalCopyright",   "@LEGAL_COPYRIGHT@"
             VALUE "LegalTrademarks",  "@TRADEMARKS@"
             VALUE "Comments",         "git @GIT_HASH@"
         END
     END
 END

// Optional: embed application icon (.ico file must exist at configure time)
// IDI_APP_ICON ICON DISCARDABLE "@PROJECT_ROOT@/assets/icons/app.ico"
